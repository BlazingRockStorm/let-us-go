<div class="container">
  <div class="row mt-5">
    <% if current_user.admin? %>
      <%= render('layouts/adminsidenav') %>
      <div class="col-md-7 mb-5">
        <h1>Editing Admin</h1>
    <% else %>
      <%= render('layouts/sidenav') %>
      <div class="col-md-7 mb-5">
        <h1>Editing User</h1>
    <% end %>
    

        <%= form_with(model: @user, local: true) do |form| %>
          <% if @user.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

              <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group row">
            <%= form.label :name, class: "col-md-3 col-form-label" %>
            <div class="col-md-9">
              <%= form.text_field :name, class: "form-control", required: true %>
            </div>
          </div>

          <div class="form-group row">
            <%= form.label :avatar, class: "col-md-3 col-form-label" %>
            <div class="col-md-9">
              <%= form.file_field :avatar %>
            </div>
          </div>
          
          <div class="form-group row">
            <%= form.label :email, class: "col-md-3 col-form-label" %>
            <div class="col-md-9">
              <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-md-3 col-form-label">
              <%= form.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
            </div>
            <div class="col-md-9">
              <%= form.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= form.label :password_confirmation, class: "col-md-3 col-form-label" %>
            <div class="col-md-9">
              <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-md-3 col-form-label">
              <%= form.label :current_password %> <i>(we need your current password to confirm your changes)</i>
            </div>
            <div class="col-md-9">
              <%= form.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= form.label :address, class: "col-md-3 col-form-label" %>
            <div class="col-md-9">
              <%= form.text_field :address, class: "form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= form.label :gender, class: "col-md-3 col-form-label" %>
            <div class="col-md-3">
              <%= form.radio_button :gender, 'Male' %>
              <%= label :gender, 'Male' %>
            </div>
            <div class="col-md-3">
              <%= form.radio_button :gender, 'Female' %>
              <%= label :gender, 'Female' %> 
            </div>
          </div>

          <div class="form-group row">
            <%= form.label :phone, class: "col-md-3 col-form-label" %>
            <div class="col-md-9">
              <%= form.text_field :phone, class: "form-control" %>
            </div>
          </div>

          <div class="form-group row mb-0">
            <div class="col-md-6 offset-md-3 text-center">
              <%= form.submit class: "btn btn-primary" %>

              <%= link_to 'Show', @user, class: "btn btn-info" %> 
              <%= link_to 'Back', users_path, class: "btn btn-secondary" %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="col-md-3">
          <%= render('layouts/advertisement') %>
      </div>
  </div>
</div>
