<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header"><h5>Sign up</h5></div>

        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group row">
              <%= f.label :name, class: "col-md-4 col-form-label text-md-right" %>
              <div class="col-md-6">
                <%= f.text_field :name, class: "form-control", required: true %>
              </div>
            </div>

            <div class="form-group row">
              <%= f.label :email, class: "col-md-4 col-form-label text-md-right" %>
              <div class="col-md-6">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-md-4 col-form-label text-md-right">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
              </div>
              <div class="col-md-6">
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
              </div>
            </div>

            <div class="form-group row">
              <%= f.label :password_confirmation, class: "col-md-4 col-form-label text-md-right" %>
              <div class="col-md-6">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
              </div>
            </div>

            <div class="form-group row">
              <%= f.label :address, class: "col-md-4 col-form-label text-md-right" %>
              <div class="col-md-6">
                <%= f.text_field :address, class: "form-control" %>
              </div>
            </div>

            <div class="form-group row">
              <%= f.label :gender, class: "col-md-4 col-form-label text-md-right" %>
              <div class="col-md-6">
                <%= f.text_field :gender, class:"form-control" %>
              </div>
            </div>

            <div class="form-group row">
              <%= f.label :phone, class: "col-md-4 col-form-label text-md-right" %>
              <div class="col-md-6">
                <%= f.text_field :phone, class:"form-control" %>
              </div>
            </div>

            <div class="form-group row mb-0">
              <div class="col-md-4 offset-md-4 text-center">
                <%= f.submit "Sign up", class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>


          <div class="text-center">or</div>
          
          <div class="row">
            <div class="col-md-8 offset-md-4">
              <%= render "users/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>          
</div>
