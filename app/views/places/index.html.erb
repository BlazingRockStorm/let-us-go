<p id="notice"><%= notice %></p>

<div class="row">
    <%= render('layouts/adminsidenav') %>
    <div class="col-md-9">
      <h1>Events</h1>

      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @places.each do |place| %>
            <tr>
              <td><%= place.name %></td>
              <td><%= place.latitude %></td>
              <td><%= place.longitude %></td>
              <td><%= link_to 'Show', place, class: "btn btn-info" %></td>
              <td><%= link_to 'Edit', edit_place_path(place), class: "btn btn-warning" %></td>
              <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Place', new_place_path, class: "btn btn-success"  %>
    </div>
</div>
